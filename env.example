# Copy to .env for local overrides

# Backend
PORT=8080
DETECTIONS_DIR=data/detections
JSON_LIMIT=25mb
LOG_FORMAT=dev
DETECTION_URL=http://detection:8001

# Detection service
CAMERA_INDEX=0
CAMERA_SCAN_LIMIT=5
LOCAL_CAMERA_ENABLED=1
CAMERA_BACKEND=AUTO
# CAMERA_BACKEND options: AUTO (default), V4L2 (лучше для Pi Camera), GSTREAMER
MODEL_PATH=models/yolov8n.pt
BACKEND_NOTIFY_URL=http://backend:8080/internal/detections
BACKEND_NOTIFY_TIMEOUT=1.0
BACKEND_NOTIFY_INTERVAL=1.0
STREAM_MAX_FPS=24
INFER_FPS=5
INFER_IMGSZ=416
JPEG_QUALITY=80
